<div class="row mt-3 gy-3" id="list-pizza">
  {% for pizza in pizzas %}
    <div class="col-3">
      <div class="card h-100" style="width: 18rem;">
        <img src="{{ asset('build/static/pizza.png') }}" class="card-img-top" alt="...">
        <a type="button" class="btn-close del-pizza btn-close-white" data-toggle="tooltip" data-placement="top"
           title="Supprimer cette pizza" data-id="{{ pizza.id }}" aria-label="Close"></a>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{ pizza.name }}</h5>
          <p class="card-text"> {% for ingredient in pizza.ingredients %}
              {{ ingredient.name }}
            {% endfor %}
          </p>
          <div class="row mt-auto">
            <div class="col-6 text-center">
              <span class="fs-3">{{ pizza.price * margin }} â‚¬</span>
            </div>
            <div class="col-6 text-center">
              <a href="{{ path('edit_pizza', {id: pizza.id}) }}" class="btn btn-primary align-self-center ">Modifier</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
